<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Phone Number : "
        android:textSize="30sp"/>

    <Button
        android:id="@+id/btn1"
        android:layout_width="90dp"
        android:layout_height="75dp"
        android:layout_alignTop="@id/btn2"
        android:layout_toLeftOf="@id/btn2"
        android:layout_marginRight="20dp"
        android:text="1"
        android:textSize="30sp"
        />

    <Button
        android:id="@+id/btn2"
        android:layout_width="90dp"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txtShow"
        android:layout_marginTop="20dp"
        android:text="2"
        android:textSize="30sp"
        />

    <Button
        android:id="@+id/btn3"
        android:layout_width="90dp"
        android:layout_height="75dp"
        android:layout_alignTop="@id/btn2"
        android:layout_toRightOf="@id/btn2"
        android:layout_marginLeft="20dp"
        android:text="3"
        android:textSize="30sp"
        />

    <Button
        android:id="@+id/btn4"
        android:layout_width="90dp"
        android:layout_height="75dp"
        android:layout_alignTop="@id/btn5"
        android:layout_toLeftOf="@id/btn5"
        android:layout_marginRight="20dp"
        android:text="4"
        android:textSize="30sp"
        />

    <Button
        android:id="@+id/btn5"
        android:layout_width="90dp"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btn2"
        android:layout_marginTop="20dp"
        android:text="5"
        android:textSize="30sp"
        />

    <Button
        android:id="@+id/btn6"
        android:layout_width="90dp"
        android:layout_height="75dp"
        android:layout_alignTop="@id/btn5"
        android:layout_toRightOf="@id/btn5"
        android:layout_marginLeft="20dp"
        android:text="6"
        android:textSize="30sp"
        />

    <Button
        android:id="@+id/btn7"
        android:layout_width="90dp"
        android:layout_height="75dp"
        android:layout_alignTop="@id/btn8"
        android:layout_toLeftOf="@id/btn8"
        android:layout_marginRight="20dp"
        android:text="7"
        android:textSize="30sp"
        />

    <Button
        android:id="@+id/btn8"
        android:layout_width="90dp"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btn5"
        android:layout_marginTop="20dp"
        android:text="8"
        android:textSize="30sp"
        />

    <Button
        android:id="@+id/btn9"
        android:layout_width="90dp"
        android:layout_height="75dp"
        android:layout_alignTop="@id/btn8"
        android:layout_toRightOf="@id/btn8"
        android:layout_marginLeft="20dp"
        android:text="9"
        android:textSize="30sp"
        />

    <Button
        android:id="@+id/btnStar"
        android:layout_width="90dp"
        android:layout_height="75dp"
        android:layout_alignTop="@id/btn0"
        android:layout_toLeftOf="@id/btn0"
        android:layout_marginRight="20dp"
        android:text="*"
        android:textSize="30sp"
        />

    <Button
        android:id="@+id/btn0"
        android:layout_width="90dp"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btn8"
        android:layout_marginTop="20dp"
        android:text="0"
        android:textSize="30sp"
        />

    <Button
        android:id="@+id/clear"
        android:layout_width="90dp"
        android:layout_height="75dp"
        android:layout_alignTop="@id/btn0"
        android:layout_toRightOf="@id/btn0"
        android:layout_marginLeft="20dp"
        android:text="C"
        android:textSize="30sp"
        />

</RelativeLayout>